{
  "rules": {
    "testing": {
      "enabled": true,
      "strictness": "medium"
    },
    "git": {
      "enabled": true,
      "commitReminder": "5m"
    },
    "refactoring": {
      "enabled": true
    },
    "security": {
      "enabled": true,
      "strictness": "high"
    },
    "shipping": {
      "enabled": true
    },
    "claudeCode": {
      "enabled": true
    }
  },
  "ai": {
    "enabled": true,
    "model": "claude-sonnet-4-20250514",
    "fallbackToRules": true,
    "maxContextMessages": 20
  },
  "verbosity": "adaptive",
  "hooks": {
    "userPromptSubmit": true,
    "postToolUse": true,
    "stop": false
  }
}
